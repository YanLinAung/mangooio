<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="basic">
	<requiredProperties>
		<requiredProperty key="application-name"></requiredProperty>
		<requiredProperty key="application-secret"></requiredProperty>
	</requiredProperties>
    <fileSets>
        <fileSet filtered="true">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>